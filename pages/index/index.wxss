/** index.wxss **/
.container {
  background-color: #EBEBEB;
  font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
}

.query-exp-box {
  background-color: #fff;
  width: 100%;
  padding-top: 36rpx;
  margin-top: 20rpx;
}

.view-exp {
  display: flex;
  flex-direction: row;
  padding: 0px 26rpx;
  margin-bottom: 25rpx;
}

.ve-line {
  font-size: 35rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.ve-head-title {
  flex: 1;
}

.ve-select-exp-company {
  float: right;
}
.ve-order-number {
  float: left;
}

.input-expcode {
  display: flex;
  width: 100%;
}

.input-bar {
  flex: 4;
  font-size: 50rpx;
}

.form-single {
  height: 50rpx;
}
.scanform {
  padding: 35rpx 30rpx;
}

.btn-scan {
  height: 50rpx;
  width: 50rpx
}
